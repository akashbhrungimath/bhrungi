#include<stdio.h>
int input();
int sum(int ,int);
void result(int);
int main()
{
    int a,b,z;
    printf("For finding the sum\n");
    a=input();
    b=input();
    z=sum(a,b);
    result(z);
    return 0;
    
}
int input()
{
    int a;
    printf("enter the number=");
    scanf("%d",&a);
    return a;
}
int sum(int a,int b)
{
    return (a+b);
}
void result(int z)
{
    printf("sum=%d\n",z);
}