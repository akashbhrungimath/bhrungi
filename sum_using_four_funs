#include<stdio.h>
float input();
float sum(float,float);
void result(float,float,float);
int main()
{
    float a,b,z;
    printf("For finding the sum\n");
    a=input();
    b=input();
    z=sum(a,b);
    result(z,a,b);
    return 0;
    
}
float input()
{
    float a;
    printf("enter the number=");
    scanf("%f",&a);
    return a;
}
float sum(float a,float b)
{
    return (a+b);
}
void result(float z,float a,float b)
{
    printf("a=%f\nb=%f\n",a,b);
    printf("sum=%f\n",z);
}