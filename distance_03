#include <stdio.h>
#include <math.h>
struct dis
{
    float x,y;
};
typedef struct dis DIS;
DIS input();
float cal(DIS,DIS);
void output(float,DIS,DIS);
int main()
{
    DIS p1,p2;
    float d;
    p1=input();
    p2=input();
    d=cal(p1,p2);
    output(d,p1,p2);
}
DIS input()
{
    DIS a;
    static int i=1;
    printf("enter the absica and ordinate of the %d point=\n",i);
    scanf("%f%f",&a.x,&a.y);
    i++;
    return a;
}
float cal(DIS p1,DIS p2)
{
    float d;
    d=sqrt(pow((p2.x-p1.x),2)+pow((p2.y-p1.y),2));
    return d;
}
void output(float d,DIS p1,DIS p2)
{
    printf("the distance between the pts (%f,%f) and (%f,%f) is=%f\n",p1.x,p1.y,p2.x,p2.y,d);
}