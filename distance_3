#include<stdio.h>
void input();
void calc(int,int,int,int);
void output(int,int);
struct frac
{
    int num;
    int den;
};
void input()
{
    struct frac f1,f2;
    printf("enter the numeretor and denominator of the first fraction=\n");
    scanf("%d%d",&f1.num,&f1.den);
    printf("enter the numerator and denominator of the second fraction=\n");
    scanf("%d%d",&f2.num,&f2.den);
    calc(f1.num,f1.den,f2.num,f2.den);
}
void calc(int a,int b,int c,int d)
{
    int n,e;
    n=(a*d)+(c*b);
    e=b*d;
    output(n,e);
}
void output(int n,int e)
{
    printf("sum of the entered fractions is=%d/%d\n",n,e);
}
int main()
{
    input();
    return 0;
}