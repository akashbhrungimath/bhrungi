#include<stdio.h>
struct frac
{
    float num;
    float den;
};
typedef struct frac FRAC;
FRAC input(int);
FRAC calc(FRAC,FRAC);
float gcd(float,float);
void output(FRAC,FRAC,FRAC);
FRAC input(int i)
{
    FRAC f;
    printf("enter the numeretor and denominator of the %d fraction=\n",i);
    scanf("%f%f",&f.num,&f.den);
    return f;
}
FRAC calc(FRAC f1,FRAC f2)
{
    FRAC f;
    float a,b;
    f.num=(f1.num*f2.den)+(f2.num*f1.den);
    f.den=(f1.den*f2.den);
    return f;
}
float gcd(float a,float b)
{
    while(a!=b)
    {
        if(a>b)
            a=a-b;
        else
            b=b-a;
    }
	return a;
}
void output(FRAC f3,FRAC f2,FRAC f1)
{
    printf("sum of the (%f/%f) and (%f/%f) is=%f/%f\n",f1.num,f1.den,f2.num,f2.den,f3.num,f3.den);
}
int main()
{
    FRAC f1,f2,f3;
    float g;
    f1=input(1);
    f2=input(2);
    f3=calc(f1,f2);
    g=gcd(f3.num,f3.den);
    f3.num=f3.num/g;
    f3.den=f3.den/g;
    output(f3,f2,f1);
    return 0;
}