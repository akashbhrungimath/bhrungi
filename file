#include<stdio.h>
#include<string.h>
int main()
{
    FILE *fl;
    char c;
    printf("enter the file contents:\n");
    fl=fopen("INPUT","a");
    while((c=getchar())!=EOF)
        putc(c,fl);
    fclose(fl);
    printf("the file contentd are\n");
    fl=fopen("INPUT","r");
    while((c=getc(fl))!=EOF)
        printf("%c",c);
    fclose(fl);
    printf("\n");
    return 0;
}
    