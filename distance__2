#include<stdio.h>
#include<math.h>
float input(int,int);
float cal(float,float,float,float);
void output(float,float,float,float,float);
int main()
{
    float x1,y1,x2,y2,d; 
    x1=input(0,1);
    y1=input(1,1);
    x2=input(0,2);
    y2=input(1,2);
    d=cal(x1,y1,x2,y2);
    output(d,x1,y1,x2,y2);
    return 0;
}
float input(int i,int j)
{
    float a;
    if(i==0)
    {
        printf("enter the absica of the %d point=",j);
        scanf("%f",&a);
    }
    else
    {
        printf("enter the ordinate of the %d point=",j);
        scanf("%f",&a);
    }
    return a;
}
float cal(float x1,float y1,float x2,float y2)
{
    float d;
    d=sqrt(pow((x2-x1),2)+pow((y2-y1),2));
    return d;
}
void output(float d,float x1,float y1,float x2,float y2)
{
    printf("distance between the entered points (%f,%f) and (%f,%f) is=%f\n",x1,y1,x2,y2,d);
}