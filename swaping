#include<stdio.h>
int main()
{
    int a[100],n,i,large,small,lpos,spos;
    printf("how many numbers you want to enter=");
    scanf("%d",&n);
    printf("enter the numbers=\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    large=a[0];
    for(i=0;i<n;i++)
    {
        if(a[i]>large)
        {
            large=a[i];
            lpos=i;
        }
    }
    small=a[0];
    for(i=0;i<n;i++)
    {
        if(a[i]<small)
        {
            small=a[i];
            spos=i;
        }
    }
    a[lpos]=small;
    a[spos]=large;
    for(i=0;i<n;i++)
    {
        printf("%d\t",a[i]);
    }
    printf("\n");
    return 0;
}