#include <stdio.h>
int main()
{
    int n,i,a[100],pos,val;
    printf("enter how many numbers you want to give=");
    scanf("%d",&n);
    printf("enter the numbers=\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("enter the position at which you want to enter the new value=");
    scanf("%d",&pos);
    printf("enter the value which you want to enter=");
    scanf("%d",&val);
    for(i=n-1;i>=pos-1;i--)
    {
        a[i+1]=a[i];
    }
    a[pos-1]=val;
    printf("entered numbers are=\n");
    for(i=0;i<=n;i++)
    {
        printf("%d\t",a[i]);
    }
    printf("\n");
    return 0;
}
