#include<stdio.h>
struct frac
{
    int num;
    int den;
};
typedef struct frac FRAC;
FRAC input(int);
FRAC calc(FRAC,FRAC,int);
void gcd(int *,int *);
void output(int,int);
FRAC input(int i)
{
	FRAC f;
	printf("enter the numerator and denominator of fraction %d\n",i);
	scanf("%d%d",&f.num,&f.den);
	return f;
}
FRAC calc(FRAC f1,FRAC f,int i)
{
    f.num=(f1.num*f.den)+(f.num*f1.den);
    f.den=f.den*(f1.den);
	return f;
}
void gcd(int *n,int *d)
{
    int a=*n,b=*d;
    while(a!=b)
    {
        if(a>b)
            a=a-b;
        else
            b=b-a;
    }
    *n=*n/a;
    *d=*d/a;
}
void output(int n,int d)
{
	printf("the sum of entered fractions is=%d/%d\n",n,d);
}
int main()
{
    int i,no;
    FRAC f,f1;
	f.num=0;
	f.den=1;
    printf("enter the number of fractions you want to enter=");
    scanf("%d",&no);
    for(i=1;i<=no;i++)
    {
        f1=input(i);
        f=calc(f1,f,i);
    }
    gcd(&f.num,&f.den);
    output(f.num,f.den); 
    return 0;
}