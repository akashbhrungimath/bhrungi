#include<stdio.h>
struct frac
{
    int num;
    int den;
};
int main()
{
    int n=0,d=1,i,a;
    struct frac f1;
    printf("enter the number of fractions you want to enter=");
    scanf("%d",&a);
    for(i=1;i<=a;i++)
    {
        printf("enter the numerator and denominator of fraction %d=\n",i);
        scanf("%d%d",&f1.num,&f1.den);
        n=(f1.num*d)+(n*f1.den);
        d=d*(f1.den);
    }
    printf("the sum of entered fractions is=%d/%d\n",n,d);
    return 0;
}