#include<stdio.h>
struct frac
{
    int num;
    int den;
};
int main()
{
    int n=0,d=1,i,a;
    struct frac f1,f2;
    printf("enter the number of fractions you want to enter=");
    scanf("%d",&a);
    for(i=1;i<=(a-1);i++)
    {
        printf("enter the numerator and denominator of first fraction\n");
        scanf("%d%d",&f1.num,&f1.den);
        printf("enter the numerator and denominator of second fraction\n");
        scanf("%d%d",&f2.num,&f2.den);
        n=n+((f1.num*f2.den)+(f2.num*f1.den));
        d=d*(f1.den*f2.den);
    }
    printf("the sum of entered functions is=%d/%d",n,d);
    return 0;
}