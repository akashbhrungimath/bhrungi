#include<stdio.h>
struct frac
{
    int num;
    int den;
};
typedef struct frac FRAC;
FRAC input(int);
void gcd(int *,int *);
void output(float,float);
FRAC input(int i)
{
	FRAC f;
	printf("enter the numerator and denominator of fraction %d\n",i);
	scanf("%d%d",&f.num,&f.den);
	return f;
}
void gcd(int *n,int *d)
{
    int a=*n,b=*d;
    while(a!=b)
    {
        if(a>b)
            a=a-b;
        else
            b=b-a;
    }
    *n=*n/a;
    *d=*d/a;
}
void output(int n,int d)
{
	printf("the sum of entered fractions is=%d/%d\n",n,d);
}
int main()
{
    int i,no;
    int n=0,d=1;
    FRAC f;
    printf("enter the number of fractions you want to enter=");
    scanf("%d",&no);
    for(i=1;i<=no;i++)
    {
        f=input(i);
        n=(f.num*d)+(n*f.den);
        d=d*(f.den);
    }
    gcd(&n,&d);
    output(n,d); 
    return 0;
}