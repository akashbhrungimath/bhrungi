#include<stdio.h>
struct frac
{
    float num;
    float den;
};
int main()
{
    int i,no;
	float n=0,d=1,a,b;
    struct frac f1;
    printf("enter the number of fractions you want to enter=");
    scanf("%d",&no);
    for(i=1;i<=no;i++)
    {
        printf("enter the numerator and denominator of fraction %d=\n",i);
        scanf("%f%f",&f1.num,&f1.den);
        n=(f1.num*d)+(n*f1.den);
        d=d*(f1.den);
    }
    a=n,b=d;
    while(a!=b)
    {
        if(a>b)
            a=a-b;
        else
            b=b-a;
    }
    n=n/a;
    d=d/a;  
    printf("the sum of entered fractions is=%f/%f\n",n,d);
    return 0;
}